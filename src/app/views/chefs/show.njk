{% extends "./layout.njk" %}

{% block content %}
  <section>
    <div class="container">
      <div class="recipe_title">
        <h3>Chef:
          {{chef.name}}</h1>
        <a href="/admin/chefs/{{chef.id}}/edit" class="button">Editar Cadastro</a>
      </div>

      <div class="chef-img">
        <img src="{{chef.avatar_url}}" alt="Imagem de {{item.title}}">
      </div>
      <div class="recipe-titles">
        <h2>{{chef.name}}</h2>
        <p>{{chef.total}}
          Receitas</p>
      </div>
    </div>
  </section>

  <main>
    <div class="containers">
      <section class="cardsAdm">
        {% for recipe in recipes %}
          <section class="org">
            <div class="card" id="{{recipe.title}}">
              <div class="image-container">
                <img src="{{recipe.image}}" alt="">
              </div>
            </div>
            <div class="card-info">
              <h5 class="namerecipe" style="width: 300px;">
                {{recipe.title}}
              </h5>
              <a href="/admin/recipes/{{recipe.id}}" class="redirect">Visualizar</a>
            </div>
          </section>
        {% endfor %}
      </div>
    </main>
    {% endblock%}