{% extends "./layout.njk" %}

{% block content %}

  <section class="cardsAdmchefs">
    {% for chef in chefs %}
      <section class="orgchefs">
        <div class="card" id="{{chef.name}}">
          <div class="image-containerchefs">
            <img src="{{chef.avatar_url}}" alt="">
          </div>
        </div>
        <div class="card-info">
          <h5 class="namechefs">
            {{chef.name}}
          </h5>
          <a href="/admin/chefs/{{chef.id}}" class="redirect">Visualizar</a>
        </div>
      </section>
    {% endfor %}
    {%endblock%}